<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/css/styles.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
  <link data-n-head="true" rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap"
    rel="stylesheet">
</head>

<body>
  <%- include('../partials/navbar') %>
    <main>
      <%- body %>
    </main>

    <%- include('../partials/footer') %>
      <script src="https://kit.fontawesome.com/74d01a45e5.js" crossorigin="anonymous"></script>
      <script>
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get("status") === "ok") {
          const modal = document.getElementById("modal-ok");
          const closeBtn = document.querySelector(".close");

          modal.classList.add("show"); // lo mostramos

          closeBtn.onclick = () => modal.style.display = "none";
          window.onclick = (e) => {
            if (e.target === modal) modal.style.display = "none";
          };
        } else if(urlParams.get("status") === "error"){
          const modalError = document.getElementById("modal-error");
          const closeBtnError = document.querySelector(".close");

          modalError.classList.add("show"); // lo mostramos

          closeBtnError.onclick = () => modalError.style.display = "none";
          window.onclick = (e) => {
            if (e.target === modalError) modalError.style.display = "none";
          };
        }
      </script>
</body>

</html>